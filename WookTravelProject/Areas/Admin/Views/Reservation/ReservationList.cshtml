@model List<WookTravelProject.Entities.Reservation>
@{
    ViewBag.Title = "ReservationList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Rezervasyonlar</h3>
        </div>
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Rezervasyon İşlemleri</div>
                    </div>
                    <div class="card-body">

                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">Rezervasyon Id</th>
                                    <th scope="col">Rezervasyon Yapan Kişi</th>
                                    <th scope="col">Telefon Numarası</th>
                                    <th scope="col">Kişi Sayısı</th>
                                    <th scope="col">Rezervasyon Tarihi</th>
                                    <th scope="col">Tur Adı</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ReservationsId</td>
                                        <td>@item.Name</td>
                                        <td>@item.Phone</td>
                                        <td>@item.PersonCount</td>
                                        <td>@item.ReservationsDate</td>
                                        <td>@item.Description</td>
                                        <td><a href="/Admin/Reservation/DeleteReservation/@item.ReservationsId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Admin/Reservation/UpdateReservation/@item.ReservationsId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/Admin/Reservation/CreateReservation" class="btn btn-primary">Yeni Rezervasyon Girişi</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



